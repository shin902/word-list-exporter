{
  "name": "word-list-exporter",
  "version": "1.0.0",
  "description": "フラッシュカード形式で学習できるWebアプリケーション",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "flashcards",
    "learning",
    "ocr",
    "gemini-api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "app.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
